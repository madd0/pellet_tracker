{
    "name": "Home Assistant Dev",
    "image": "mcr.microsoft.com/devcontainers/python:3.13-bookworm",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {
            "moby": false
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "keesschollaart.vscode-home-assistant"
            ]
        }
    },
    "forwardPorts": [
        8123
    ],
    "portsAttributes": {
        "8123": {
            "label": "Home Assistant",
            "onAutoForward": "notify"
        }
    },
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y libpcap-dev ffmpeg libturbojpeg0-dev && pip install --upgrade homeassistant"
}
